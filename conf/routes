# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

# Scala Interface
GET /language                               controllers.Application.language

# compiler Json interface
POST /compiler/scala                      controllers.Application.compileScalaJson
POST /compiler/markdown                      controllers.Application.compileMarkdownJson
POST /compiler/latex                      controllers.Application.compileLatexJson

# Documents and rendering
GET /doc/static                                 controllers.Application.staticDoc(file = "doc.json")
GET /doc/static/*file                           controllers.Application.staticDoc(file)
GET /doc/editor                                 controllers.Application.editor

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)




